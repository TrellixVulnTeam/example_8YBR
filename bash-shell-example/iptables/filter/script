iptables -A OUTPUT -o eth0 -p tcp -s <<LOCAL_HOST_IP>> --sport 1024:65535 -d <<IMAP_SERVER>> --dport 143 -j ACCEPT
iptables -A INPUT -i eth0 -p tcp ! --syn -s <<IMAP_SERVER>> --sport 143 -d <<LOCAL_HOST_IP>> --dport 1024:65535 -j ACCEPT

