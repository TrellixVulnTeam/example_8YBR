iptables -A INPUT -i eth0 -p tcp --sport 1024:65535 -d <<LOCAL_HOST_IP>> --dport 110 -j ACCEPT
iptables -A OUTPUT -o eth0 -p tcp ! --syn -s <<LOCAL_HOST_IP>> --sport 110 --dport 1024:65535 -j ACCEPT

