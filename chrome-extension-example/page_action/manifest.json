{
	"manifest_version": 2,
	"name": "page_action extension",
	"version": "1.0.0.0",
	"page_action": {
		"default_title": "default title",
		"default_icon": "icon.png",
		"default_popup": "popup.html"
	},
	"permissions": [
		"tabs",
		"declarativeContent"
	],
	"background": {
		"persistent": false,
		"scripts": [
			"background.js"
		]
	}
}